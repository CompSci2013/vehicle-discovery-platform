# Development Dockerfile for Angular 14 with HMR
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Expose dev server port
EXPOSE 4200

# Start dev server with HMR
CMD ["npm", "start", "--", "--host", "0.0.0.0", "--poll", "2000"]
